<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.entrada.cheekyMonkey.ui.CustomTextview
            android:id="@+id/t_v_header_table_for_o_summry"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:paddingLeft="20sp"
            android:paddingStart="20sp"
            android:text="Table - "
            android:textColor="@color/WhiteSmoke"
            android:textSize="20sp"
            android:visibility="gone" />

        <com.entrada.cheekyMonkey.ui.CustomTextview
            android:id="@+id/t_v_header_room_no_summary"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:paddingLeft="20sp"
            android:paddingStart="20sp"
            android:text="Room - "
            android:textColor="@color/WhiteSmoke"
            android:textSize="20sp" />

        <com.entrada.cheekyMonkey.ui.CustomTextview
            android:id="@+id/t_v_table_for_order_summry"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/WhiteSmoke"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.entrada.cheekyMonkey.ui.CustomTextview
            android:id="@+id/t_v_header_order_for_o_summry"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:paddingLeft="20sp"
            android:paddingStart="20sp"
            android:text="Order No - "
            android:textColor="@color/WhiteSmoke"
            android:textSize="20sp" />

        <com.entrada.cheekyMonkey.ui.CustomTextview
            android:id="@+id/t_v_order_for_order_summry"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/WhiteSmoke"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>