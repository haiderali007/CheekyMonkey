<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"
        android:layout_marginTop="2sp"
        android:background="@color/grey_light">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height"
            android:gravity="center"
            android:text="Company Profile"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10sp"
            android:paddingRight="10sp">

            <LinearLayout
                android:id="@+id/relativeLayoutDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp">

                <com.entrada.cheekyMonkey.ui.CustomTextview
                    android:id="@+id/TextViewCompCode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center"
                    android:layout_weight="1"
                    android:text="Comp.Code*"
                    android:textColor="@color/WhiteSmoke"
                    android:textSize="20sp" />

                <com.entrada.cheekyMonkey.ui.CustomEditView
                    android:id="@+id/editTextCompCode"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_horizontal|center"
                    android:layout_weight="1.70"
                    android:background="@drawable/item_add_input_type"
                    android:inputType="number"
                    android:maxLength="10"
                    android:textColor="#000000"
                    android:textSize="20sp">

                    <requestFocus />
                </com.entrada.cheekyMonkey.ui.CustomEditView>

                <ImageView
                    android:id="@+id/imgCompanySearch"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_horizontal|center"
                    android:layout_weight=".3"
                    android:background="@color/DeepSkyBlue"
                    android:src="@drawable/abc_ic_search_api_mtrl_alpha" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <com.entrada.cheekyMonkey.ui.CustomTextview
                    android:id="@+id/t_v_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Name *"
                    android:textColor="@color/WhiteSmoke"
                    android:textSize="20sp" />

                <com.entrada.cheekyMonkey.ui.CustomEditView
                    android:id="@+id/editTextCompName"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="2"
                    android:background="@drawable/item_add_input_type"
                    android:inputType="textCapWords"
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <com.entrada.cheekyMonkey.ui.CustomTextview
                    android:id="@+id/t_v_address1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Address1 *"
                    android:textColor="@color/WhiteSmoke"
                    android:textSize="20sp" />

                <com.entrada.cheekyMonkey.ui.CustomEditView
                    android:id="@+id/editTextAddress1"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="2"
                    android:background="@drawable/item_add_input_type"
                    android:inputType="textCapWords"
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <com.entrada.cheekyMonkey.ui.CustomTextview
                    android:id="@+id/TextAddress2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Address2 "
                    android:textColor="@color/WhiteSmoke"
                    android:textSize="20sp" />

                <com.entrada.cheekyMonkey.ui.CustomEditView
                    android:id="@+id/editTextAddress2"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="2"
                    android:background="@drawable/item_add_input_type"
                    android:inputType="textCapWords"
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <com.entrada.cheekyMonkey.ui.CustomTextview
                    android:id="@+id/TextViewCompCity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="City"
                    android:textColor="@color/WhiteSmoke"
                    android:textSize="20sp" />

                <com.entrada.cheekyMonkey.ui.CustomEditView
                    android:id="@+id/editTextCompCity"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="2"
                    android:background="@drawable/item_add_input_type"
                    android:inputType="textCapWords"
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <com.entrada.cheekyMonkey.ui.CustomTextview
                    android:id="@+id/t_pinText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pin"
                    android:textColor="@color/WhiteSmoke"
                    android:textSize="20sp" />

                <com.entrada.cheekyMonkey.ui.CustomEditView
                    android:id="@+id/editTextCompPin"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="2"
                    android:background="@drawable/item_add_input_type"
                    android:inputType="number"
                    android:maxLength="6"
                    android:textColor="#000000"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <com.entrada.cheekyMonkey.ui.CustomTextview
                    android:id="@+id/edittTextPhoneforComp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Phone "
                    android:textColor="@color/WhiteSmoke"
                    android:textSize="20sp" />

                <com.entrada.cheekyMonkey.ui.CustomEditView
                    android:id="@+id/edittTextPhone"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="2"
                    android:background="@drawable/item_add_input_type"
                    android:inputType="number"
                    android:maxLength="12"
                    android:textColor="#000000"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <com.entrada.cheekyMonkey.ui.CustomTextview
                    android:id="@+id/t_v_Company_Info_Date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Comp. Info Date"
                    android:textColor="@color/WhiteSmoke"
                    android:textSize="20sp" />

                <com.entrada.cheekyMonkey.ui.CustomTextview
                    android:id="@+id/textViewCompanyInfoDate"
                    android:layout_width="0dp"
                    android:layout_height="35sp"
                    android:layout_weight="2"
                    android:background="@drawable/edit_text_background"
                    android:textColor="@color/Black"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <com.entrada.cheekyMonkey.ui.CustomTextview
                    android:id="@+id/t_v_Loyalty_Eff_Date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Loyalty Eff. Date"
                    android:textColor="@color/WhiteSmoke"
                    android:textSize="20sp" />

                <com.entrada.cheekyMonkey.ui.CustomTextview
                    android:id="@+id/testViewLoyaltyEffDate"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="2"
                    android:background="@drawable/edit_text_background"
                    android:textColor="@color/Black"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <com.entrada.cheekyMonkey.ui.CustomTextview
                    android:id="@+id/t_v_email_id_for_c_g_p1wsss"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Status"
                    android:textColor="@color/WhiteSmoke"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/spinnerStatusComp"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="2"
                    style="?android:attr/dropDownSpinnerStyle"
                    android:entries="@array/table_status_arrays"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/t_v_email_id_for_c_g_p"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Disc. Validity"
                    android:textColor="@color/WhiteSmoke"
                    android:textSize="20sp" />

                <com.entrada.cheekyMonkey.ui.CustomTextview
                    android:id="@+id/testViewDiscValidity"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="2"
                    android:background="@drawable/edit_text_background"
                    android:textColor="@color/Black"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35sp"
                    android:text="Discount (%)"
                    android:textColor="@color/WhiteSmoke"
                    android:textSize="20sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5sp"
                    android:layout_marginStart="5sp"
                    android:background="@color/Gray" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ListView
                    android:id="@+id/lv_for_Discount"
                    android:layout_width="match_parent"
                    android:layout_height="100sp"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_bottomOrder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/Black">

        <com.entrada.cheekyMonkey.ui.CustomTextview
            android:id="@+id/textViewCompClear"
            style="@style/take_order_header_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginRight="2sp"
            android:background="@color/grey_light"
            android:text="@string/clear_string" />

        <com.entrada.cheekyMonkey.ui.CustomTextview
            android:id="@+id/tevCompSave"
            style="@style/take_order_header_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/grey_light"
            android:text="@string/save_string" />

    </LinearLayout>

</LinearLayout>