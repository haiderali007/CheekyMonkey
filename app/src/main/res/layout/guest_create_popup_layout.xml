<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/relativelayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"
        android:layout_marginTop="2sp"
        android:background="@color/grey_light">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height"
            android:gravity="center"
            android:text="Guest Profile"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Black"
            android:orientation="vertical"
            android:paddingLeft="10sp"
            android:paddingRight="10sp">


            <LinearLayout
                android:id="@+id/relativeLayoutDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center"
                    android:layout_weight="1"
                    android:text="Mobile"
                    android:textColor="@color/WhiteSmoke"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/e_t_mobile_for_c_g_p"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_horizontal|center"
                    android:layout_weight="1.7"
                    android:background="@drawable/item_add_input_type"
                    android:inputType="number"
                    android:maxLength="12"
                    android:textColor="#000000"
                    android:textSize="20sp">

                    <requestFocus />
                </EditText>

                <ImageView
                    android:id="@+id/imageGuestSearch"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_horizontal|center"
                    android:layout_weight="0.3"
                    android:background="@color/DeepSkyBlue"
                    android:src="@drawable/abc_ic_search_api_mtrl_alpha" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Name"
                    android:textColor="@color/WhiteSmoke"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/e_t_name_for_c_g_p"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="2"
                    android:background="@drawable/item_add_input_type"
                    android:inputType="textCapWords"
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Address1"
                    android:textColor="@color/WhiteSmoke"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/e_t_address_for_c_g_p"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="2"
                    android:background="@drawable/item_add_input_type"
                    android:inputType="textCapWords"
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Address2 "
                    android:textColor="@color/WhiteSmoke"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/e_t_address_guest2"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="2"
                    android:background="@drawable/item_add_input_type"
                    android:inputType="textCapWords"
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Spl.Remark"
                    android:textColor="@color/WhiteSmoke"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/e_t_spceial_remaks"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="2"
                    android:background="@drawable/item_add_input_type"
                    android:inputType="textCapSentences"
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Email"
                    android:textColor="@color/WhiteSmoke"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/e_t_email_id_for_c_p"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="2"
                    android:background="@drawable/item_add_input_type"
                    android:imeOptions="actionDone"
                    android:inputType="textEmailAddress"
                    android:textColor="#000000"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="DOB"
                    android:textColor="@color/WhiteSmoke"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_dob"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="2"
                    android:background="@drawable/item_add_input_type"
                    android:textColor="#000000"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Anniversary"
                    android:textColor="@color/WhiteSmoke"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_anniv"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="2"
                    android:background="@drawable/item_add_input_type"
                    android:textColor="#000000"
                    android:textSize="20sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/t_v_sex_for_c_g_p"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sex"
                    android:textColor="@color/WhiteSmoke"
                    android:textSize="20sp" />

                <RadioGroup
                    android:id="@+id/r_g_for_c_g_p"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:textColor="@color/White">

                    <RadioButton
                        android:id="@+id/r_male_for_c_g_p"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:checked="true"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Male"
                        android:textColor="@color/WhiteSmoke" />

                    <RadioButton
                        android:id="@+id/r_female_for_c_g_p"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Female"
                        android:textColor="@color/WhiteSmoke" />
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/t_v_email_id_for_c_g_p"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Disc. Validity"
                    android:textColor="@color/WhiteSmoke"
                    android:textSize="20sp" />

                <com.entrada.cheekyMonkey.ui.CustomTextview
                    android:id="@+id/textView_Validity"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="2"
                    android:background="@drawable/edit_text_background"
                    android:textColor="@color/Black"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35sp"
                    android:text="Discount (%)"
                    android:textColor="@color/WhiteSmoke"
                    android:textSize="20sp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="2sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5sp"
                    android:layout_marginStart="5sp"
                    android:background="@color/Gray" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ListView
                    android:id="@+id/lv_for_discount"
                    android:layout_width="match_parent"
                    android:layout_height="150sp"/>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_bottomOrder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/Black">

        <com.entrada.cheekyMonkey.ui.CustomTextview
            android:id="@+id/textViewGuestClear"
            style="@style/take_order_header_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/grey_light"
            android:layout_marginRight="2sp"
            android:gravity="center"
            android:text="@string/clear_string" />

        <com.entrada.cheekyMonkey.ui.CustomTextview
            android:id="@+id/textViewGuestSave"
            style="@style/take_order_header_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/grey_light"
            android:gravity="center"
            android:text="@string/save_string" />

    </LinearLayout>


</LinearLayout>