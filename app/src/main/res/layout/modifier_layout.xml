<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <com.entrada.cheekyMonkey.ui.CustomTextview
            android:id="@+id/tv_back"
            android:layout_width="0dp"
            android:layout_height="@dimen/header2_height"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableLeft="@drawable/arrow_left"
            android:drawableStart="@drawable/arrow_left"
            android:background="@color/grey_light"
            android:text="@string/add_mixer"
            android:textStyle="bold"
            android:textColor="@color/White"
            android:textSize="@dimen/extra_large"/>

        <com.entrada.cheekyMonkey.ui.CustomTextview
            android:id="@+id/txt_skip"
            android:layout_width="0dp"
            android:layout_height="@dimen/header2_height"
            android:layout_weight="1"
            android:gravity="center_vertical|end"
            android:paddingStart="10dp"
            android:paddingEnd="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:background="@color/grey_light"
            android:text="@string/skip"
            android:textStyle="bold"
            android:textColor="@color/White"
            android:textSize="@dimen/extra_large"/>

    </LinearLayout>

    <ListView
        android:id="@+id/listViewModifer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/padding_small"
        android:background="@color/Black"
        android:divider="@android:color/transparent" />


    <com.entrada.cheekyMonkey.ui.CustomTextview
        android:id="@+id/txt_proceed"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header2_height"
        android:gravity="center"
        android:background="@color/grey_light"
        android:text="@string/proceed"
        android:textStyle="bold"
        android:textColor="@color/SkyBlue"
        android:textSize="@dimen/extra_extra_large" />

</LinearLayout>