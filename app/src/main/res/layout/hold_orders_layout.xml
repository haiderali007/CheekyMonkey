<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black"
    android:orientation="vertical"
    tools:ignore="ButtonOrder,ObsoleteLayoutParam,ButtonStyle,UselessParent,HardcodedText">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tabs_slider_height"
        android:background="@color/grey_light">


        <com.entrada.cheekyMonkey.ui.CustomTextview
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/orders_string"
            android:textSize="24sp"
            app:fontName="Roboto-Medium" />


        <com.entrada.cheekyMonkey.ui.CustomTextview
            android:id="@+id/tv_Order_no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/DeepSkyBlue"
            android:textSize="20sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/LinerLayoutBillDetails"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_row_height"
        android:layout_marginTop="2sp"
        android:background="@color/grey_light">


        <com.entrada.cheekyMonkey.ui.CustomTextview
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="SubTotal:"
            android:textSize="18sp" />

        <com.entrada.cheekyMonkey.ui.CustomTextview
            android:id="@+id/tv_Subtotal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:paddingLeft="2sp"
            android:textColor="@color/DeepSkyBlue"
            android:textSize="18sp" />

        <com.entrada.cheekyMonkey.ui.CustomTextview
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Discount: "
            android:textSize="18sp" />

        <com.entrada.cheekyMonkey.ui.CustomTextview
            android:id="@+id/tv__Discount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".9"
            android:paddingLeft="2sp"
            android:textColor="@color/DeepSkyBlue"
            android:textSize="18sp" />

        <com.entrada.cheekyMonkey.ui.CustomTextview
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Tax:"
            android:textSize="18sp" />

        <com.entrada.cheekyMonkey.ui.CustomTextview
            android:id="@+id/tv_Tax"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".9"
            android:paddingLeft="2sp"
            android:textColor="@color/DeepSkyBlue"
            android:textSize="18sp" />


        <com.entrada.cheekyMonkey.ui.CustomTextview
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Total:"
            android:textSize="18sp" />

        <com.entrada.cheekyMonkey.ui.CustomTextview
            android:id="@+id/tv_Total"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:paddingLeft="2sp"
            android:textColor="@color/DeepSkyBlue"
            android:textSize="18sp" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ListView
            android:id="@+id/lv_hold_orders"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:listSelector="@android:color/transparent"
            android:padding="@dimen/table_num_hori_space"
            android:scrollbars="none"
            android:stretchMode="columnWidth"
            android:verticalSpacing="@dimen/table_num_hori_space" />


    </RelativeLayout>

</LinearLayout>