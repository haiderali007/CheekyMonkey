<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/Gray"
    android:orientation="vertical"
    android:padding="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Black"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/deleteSureText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/deleteButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="?android:attr/buttonBarButtonStyle"
                android:background="@color/DarkRed"
                android:minWidth="160dp"
                android:text="@string/ok_string"
                android:layout_marginRight="5dp"
                android:textColor="@color/White"
                android:textSize="@dimen/item_qty_font_size" />

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_marginLeft="5dp"
                android:background="@color/Green"
                android:minWidth="160dp"
                android:text="@string/cancel_string"
                android:textColor="@color/White"
                android:textSize="@dimen/item_qty_font_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/exitFromApp"
            android:textColor="@color/White"
            android:textSize="@dimen/txt_size_login"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/deleteSureText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/White"
            android:textSize="@dimen/txt_size_login"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>