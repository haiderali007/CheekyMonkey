<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/relativelayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"
        android:layout_marginTop="2sp"
        android:background="@color/grey_light">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Delivery Boy"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/relativeLayoutDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5sp"
        android:visibility="visible">

        <TextView
            android:id="@+id/t_v_mobile_for_c_g_p"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:layout_weight="2"
            android:text="Del.Boy Code"
            android:textColor="@color/WhiteSmoke"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/et_del_code"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="2"
            android:background="@drawable/item_add_input_type"
            android:gravity="center_vertical"
            android:maxLength="12"
            android:paddingLeft="10sp"
            android:paddingStart="10sp"
            android:textColor="#000000"
            android:textSize="20sp">

            <requestFocus />
        </TextView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5sp">

        <TextView
            android:id="@+id/t_v_name_for_c_g_p"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Name"
            android:textColor="@color/WhiteSmoke"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/et_del_name"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="2"
            android:background="@drawable/item_add_input_type"
            android:gravity="center_vertical"
            android:inputType="textCapWords"
            android:paddingLeft="10sp"
            android:paddingStart="10sp"
            android:textColor="#000000"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5sp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:text="Arrival Time"
            android:textColor="@color/WhiteSmoke"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_arvl"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="2"
            android:background="@color/White"
            android:gravity="center_vertical"
            android:inputType="textCapWords"
            android:paddingLeft="10sp"
            android:paddingStart="10sp"
            android:textColor="@color/Black"
            android:textSize="20sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5sp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:text="Depart. Time"
            android:textColor="@color/WhiteSmoke"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_dept"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="2"
            android:background="@color/White"
            android:gravity="center_vertical"
            android:inputType="textCapWords"
            android:paddingLeft="10sp"
            android:paddingStart="10sp"
            android:textColor="@color/Black"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:padding="10sp"
        android:visibility="gone">

        <com.entrada.cheekyMonkey.ui.CustomTextview
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:layout_marginRight="10sp"
            android:text="Del. Boy User ID"
            android:textColor="@color/White"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:layout_gravity="center"
            android:background="@color/Gray" />

    </LinearLayout>

    <ListView
        android:id="@+id/lv_for_crew_member"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"></ListView>

    <LinearLayout
        android:id="@+id/ll_bottomOrder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/take_order_header_height"
        android:background="@color/grey_light">

        <Button
            android:id="@+id/btn_close"
            style="@style/take_order_header_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_weight="1"
            android:background="@color/Brown"
            android:gravity="center"
            android:text="@string/cancel_string"
            android:textColor="@color/White" />

        <Button
            android:id="@+id/btn_in"
            style="@style/take_order_header_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20sp"
            android:layout_weight="1"
            android:background="@color/Green"
            android:gravity="center"
            android:text="@string/in_string" />

    </LinearLayout>


</LinearLayout>