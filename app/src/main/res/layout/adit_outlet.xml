<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customisebyRahul="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/Yellow"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_edit_outlet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/select_outlet"
            android:textColor="@color/grey_dark"
            android:textSize="@dimen/extra_extra_large" />

        <ImageView
            android:id="@+id/add_out_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:paddingRight="5dp"
            android:src="@drawable/add_outlet" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/LightGrey">

        <ListView
            android:id="@+id/listView_edit_outlet"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_gravity="center" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_submit_edit_outlet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:background="@drawable/button_state"
        android:gravity="bottom"
        android:text="@string/submit_string"
        android:textAllCaps="false" />
</LinearLayout>