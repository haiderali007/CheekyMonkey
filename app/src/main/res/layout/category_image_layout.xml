<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:background="@drawable/black_glass">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/black_glass"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_cat"
            android:layout_width="@dimen/cat_img_width"
            android:layout_height="@dimen/cat_img_height"
            android:gravity="center"
            android:src="@drawable/liquor" />


        <com.entrada.cheekyMonkey.ui.CustomTextview
            android:id="@+id/tv_cat_name"
            android:layout_width="@dimen/cat_img_width"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:textColor="@color/White"
            android:textSize="@dimen/large" />

    </LinearLayout>

</LinearLayout>