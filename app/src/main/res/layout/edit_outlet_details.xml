<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LightGrey"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/Yellow"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_outlet_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Outlet Details"
            android:textColor="@color/grey_dark"
            android:textSize="@dimen/extra_extra_large" />

        <ImageView
            android:id="@+id/img_edit_outlet"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_weight="0.1"
            android:src="@drawable/edit_out1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@color/LightGrey"
        android:gravity="center"
        android:orientation="vertical">


        <EditText

            android:id="@+id/edt_outlet_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/extra_extra_large"
            android:background="@color/White"
            android:hint="name"
            android:padding="10dp"
            android:textColor="@color/Black"
            android:textColorHint="@color/grey_dark" />

        <EditText
            android:id="@+id/edt_outlet_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/extra_extra_large"
            android:background="@color/White"
            android:hint="Address"
            android:padding="10dp"
            android:textColor="@color/Black"
            android:textColorHint="@color/grey_dark" />

        <EditText
            android:id="@+id/edt_outlet_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/extra_extra_large"
            android:background="@color/White"
            android:hint="City"
            android:padding="10dp"
            android:textColor="@color/Black"
            android:textColorHint="@color/grey_dark" />

        <EditText
            android:id="@+id/edt_outlet_pin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/extra_extra_large"
            android:background="@color/White"
            android:hint="Pin No."
            android:inputType="number"
            android:padding="10dp"
            android:textColor="@color/Black"
            android:textColorHint="@color/grey_dark" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/Black"
        android:layout_weight="0"
        android:layout_marginTop="@dimen/extra_extra_large"
        android:gravity="center">

        <Button
            android:id="@+id/btn_edit_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_state"
            android:text="@string/save"
            android:textAllCaps="false" />
    </LinearLayout>
</LinearLayout>