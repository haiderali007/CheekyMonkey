<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/order_background"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.entrada.cheekyMonkey.ui.CustomTextview
        android:id="@+id/textSeparator"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true"
        android:padding="10dp"
        android:textAllCaps="true"
        android:textSize="@dimen/large"
        android:textStyle="bold"
        app:fontName="Roboto-Black"/>


    <com.entrada.cheekyMonkey.ui.CustomTextview
        android:id="@+id/tv_ttl_items"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true"
        android:padding="10dp"
        android:textColor="@color/menu_item_color"
        android:textSize="@dimen/large"
        android:textStyle="bold"
        android:visibility="visible"/>

</LinearLayout>